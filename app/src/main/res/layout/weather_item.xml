<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/rect"
              android:orientation="vertical">


    <TextView
            android:id="@+id/cwTvTime"
            android:layout_marginStart="@dimen/padding_size_4"
            android:layout_marginEnd="@dimen/padding_size_4"
            style="@style/StatusSuper"
            android:text="22:00"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/cwIvIcon"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/padding_size_40"
            android:layout_height="@dimen/padding_size_40"
            android:src="@drawable/ic_launcher_foreground"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center">

        <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/padding_size_24"
                android:layout_height="@dimen/padding_size_24"
                android:src="@drawable/ic_launcher_foreground"/>

        <TextView
                style="@style/StatusAttention"
                android:text="76%"
                android:id="@+id/cwTvHumidity"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>


    <TextView
            android:layout_gravity="center_horizontal"
            style="@style/H6Light"
            android:id="@+id/cwTvTemperature"
            android:text="3Â°"
            android:layout_margin="@dimen/padding_size_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <ProgressBar
            android:id="@+id/cwValueTemperature"
            android:layout_gravity="center_horizontal"
            android:max="100"
            android:progress="80"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="7dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_size_4"
            android:progressDrawable="@drawable/vertical_progress_bar"/>


</LinearLayout>